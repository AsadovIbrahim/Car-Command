<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGrid" Grid.Row="0" Height="380"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Get Car" Width="100" Height="30" Click="getClick"/>
            <Button Margin="20,0,0,0" Content="Post Car" Width="100" Height="30" Click="postClick"/>
            <Button Margin="20,0,0,0" Content="Put Car" Width="100" Height="30" Click="putClick"/>
            <Button Margin="20,0,0,0" Content="Delete Car" Width="100" Height="30" Click="deleteClick"/>
        </StackPanel>
    </Grid>
</Window>
